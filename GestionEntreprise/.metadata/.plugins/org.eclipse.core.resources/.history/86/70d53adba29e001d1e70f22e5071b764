		btnNewButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				if (e.getSource()==btnNewButton) {
					
					Cnx  c= new Cnx();
					Connection connexion= c.returner();
					try {
						String requette =  "INSERT INTO articles (reference,libelle,prixUnitaire,quantite) " +
					            "VALUES (?,?,?,?)";
						 PreparedStatement st=  connexion.prepareStatement(requette);
						st.setString(1,textField .getText());
						st.setString(2,textField_1.getText());
						st.setString(3,textField_2.getText());
						st.setString(4,textField_3.getText());
						st.executeUpdate();
						JOptionPane.showMessageDialog(null, "article bien Enregistre !");
						
						connexion.close();
					} catch (SQLException e1) {
						// TODO Auto-generated catch block
						e1.printStackTrace();
						System.out.println("requete insert a rencontrï¿½ un probleme!!!"); 
					
					}
					
					
					}
			}
		});
